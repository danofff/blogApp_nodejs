include ../partials/navigation.pug

.container
    //- a.postHeaderReference(href="/"+post._id)
    h2 #{post.title}
    small.text-muted.font-italic= moment(post.date).format('DD.MM.YYYY')
    div
        form(action="/")
        small
            a(href="/posts/theme/"+post.theme._id) #{post.theme.themeName}
    p !{post.text}
    div
        form.mr-2.mb-2(action=`/posts/${post._id}/edit`, method="get" style="display: inline-block")
            button.btn.btn-outline-secondary.btn-sm(type="submin") Редактировать 
                i.far.fa-edit
        form(action=`/posts/${post._id}/edit`, method="get" style="display: inline-block")
            button.btn.btn-outline-danger.btn-sm(type="submin") Удалить 
                i.fas.fa-trash-alt

